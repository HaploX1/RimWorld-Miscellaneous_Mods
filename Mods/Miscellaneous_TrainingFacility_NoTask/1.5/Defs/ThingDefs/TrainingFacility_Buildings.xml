<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef ParentName="BuildingBase_MiscTraining">
		<defName>ShootingRangeTarget</defName>
		<thingClass>TrainingFacility.Building_ShootingRange</thingClass>
		<label>shooting target</label>
		<description>The shooting range is a place where you can train your hand-eye coordination.</description>
		<graphicData>
			<texPath>Things/Building/TrainingFacility/ShootingRangeTarget</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<damageData>
				<rect>(0.3,0.3,0.7,0.7)</rect>
			</damageData>
		</graphicData>
		<uiIconPath>Things/Building/TrainingFacility/ShootingRangeTarget_south</uiIconPath>
		<altitudeLayer>Building</altitudeLayer>
		<rotatable>true</rotatable>
		<minifiedDef>MinifiedThing</minifiedDef>
		<socialPropernessMatters>true</socialPropernessMatters>
		<statBases>
			<WorkToBuild>2500</WorkToBuild>
			<MaxHitPoints>1000</MaxHitPoints>
			<Flammability>1.0</Flammability>
			<Beauty>-2</Beauty>
			<Mass>35</Mass>
			<JoyGainFactor>1.0</JoyGainFactor>
		</statBases>
		<building>
			<joyKind>Gaming_Shooting</joyKind>
			<watchBuildingStandDistanceRange>
				<min>8</min>
				<max>11</max>
			</watchBuildingStandDistanceRange>
			<watchBuildingStandRectWidth>3</watchBuildingStandRectWidth>
		</building>
		<size>(1,1)</size>
		<costList>
			<Steel>40</Steel>
		</costList>
		<costStuffCount>55</costStuffCount>
		<stuffCategories>
			<li>Fabric</li>
			<li>Leathery</li>
		</stuffCategories>
		<pathCost>120</pathCost>
		<designationCategory>Joy</designationCategory>
		<thingCategories>
			<li>BuildingsJoy</li>
		</thingCategories>
		<placeWorkers>
			<li>TrainingFacility.PlaceWorker_ShootingRange</li>
		</placeWorkers>
	</ThingDef>

