		<graphicData>
			<texPath>Things/Weapon/Railgun/Railgun</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<soundInteract>Interact_ChargeLance</soundInteract>
		<statBases>
			<Mass>6.25</Mass>
			<MarketValue>1600</MarketValue>
